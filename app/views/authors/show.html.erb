<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-body">
	<h1>Autor</h1>	    
  </div>
  <div class="panel-footer panel-transparent">
  	<div class="row">
	    <div class="col-xs-6"> 
	      	<dl class="dl-horizontal">
	      		<dt><%=t('activerecord.attributes.author.name')%></dt>
	        	<dd><%=@author.name || '-' %></dd>
	        	<dt><%=t('activerecord.attributes.author.date_of_birth')%></dt>
	        	<dd><%=@author.date_of_birth || '-' %></dd>
	        	<dt><%=t('activerecord.attributes.author.number_of_books')%></dt>
	        	<dd><%=@author.number_of_books || '-' %></dd>
	    	</dl>
		</div>
	</div>		
  </div>
</div>
<div class="row">
	<div class="col-sm-12">      
	  <%= link_to 'Editar', edit_author_path(@author), class: 'btn btn-primary' %>
	  <%= link_to 'Volver', authors_path, class: 'btn btn-default' %>
	</div>
</div>


